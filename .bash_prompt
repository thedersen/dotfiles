GREY=$(tput setaf 8)
GOLD=$(tput setaf 3)
TEAL=$(tput setaf 6)
PINK=$(tput setaf 5)
RESET=$(tput sgr0)

COLOR_U=$GREY
COLOR_W=$GOLD
COLOR_GIT=$TEAL

GIT_PS1_SHOWDIRTYSTATE=true
GIT_PS1_SHOWSTASHSTATE=false
GIT_PS1_SHOWUNTRACKEDFILES=true
GIT_PS1_SHOWUPSTREAM="verbose"

export PS1='\n${COLOR_U}\u@\h ${COLOR_W}\w${COLOR_GIT}$(__git_ps1)${RESET}\n$ '
